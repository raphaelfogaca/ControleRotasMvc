<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    <script src="~/Scripts/modernizr-2.6.2.js"></script>

    <link rel="stylesheet" href="~/Content/Css/bootstrap.css" type="text/css" />
    <link rel="stylesheet" href="~/Content/Css/Site.css" />

    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>

<body>
    @*<link href="~/Content/Css/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />*@

    <nav class="navbar">
        <a class="navbar-brand" href="#">SISTEMA</a>

        <ul class="nav navbar-nav">

            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Cadastros <span class="caret"></a>
                <ul class="dropdown-menu">
                    <li>@Html.ActionLink("Alunos", "Index", "Aluno")</li>
                    <li>@Html.ActionLink("Usuários", "Index", "Usuario")</li>
                    <li>@Html.ActionLink("Matérias", "Index", "Materia")</li>
                </ul>
            </li>

            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Alunos <span class="caret"></a>
                <ul class="dropdown-menu">
                    <li>@Html.ActionLink("Controle", "Index", "Aluno")</li>
                </ul>
            </li>

            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Financeiro <span class="caret"></a>
                <ul class="dropdown-menu">
                    <li>@Html.ActionLink("Operacional", "Index", "Financeiro")</li>
                </ul>
            </li>
        </ul>

        <ul class="nav navbar-nav navbar-right">
            <li><a href="#">Logout    </a></li>
        </ul>

    </nav>

    <div class="container">
        <div id="body" role="alert">
            @Flash.FlashMessage(TempData)
            <div id="flash"></div>
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix"></section>
        </div>
        <div id="conteudo">
            @RenderBody()
        </div>

    </div>
        <script src="~/Scripts/jquery-3.3.1.js"></script>
       <script src="~/Scripts/bootstrap.min.js"></script>
    
    @RenderSection("Scripts", false)
</body>
</html>
